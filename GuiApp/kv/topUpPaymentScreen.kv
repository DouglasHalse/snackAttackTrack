#:kivy 2.1.0     

<TopUpPaymentScreenContent>:
    rows: 1
    padding: 30
    spacing: 30
    GridLayout:
        cols: 1
        id: qrCodeLayout
    GridLayout:
        cols: 1
        spacing: 10
        GridLayout:
            canvas:
                Color:
                    rgba: (1, 1, 1, 1)
                SmoothRoundedRectangle:
                    pos: self.pos
                    size: self.size
                Color:
                    rgba: app.colors["button"]
                SmoothRoundedRectangle:
                    pos: (self.pos[0] + 5, self.pos[1] + 5)
                    size: (self.width - 10, self.height - 10)
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 0.10
                BoxShadow:
                    pos: self.pos
                    size: self.size
                    offset: 10, -10
                    blur_radius: 15
                    spread_radius: -5, -5
                    border_radius: 2, 2, 2, 2
            cols: 1
            spacing: 10
            padding: [0, 20]
            GridLayout:
                cols: 1
                Label:
                    bold: True
                    text: "Step 1:"
                    font_size: 28
                Label:
                    text: "Scan QR code with swish"
                    font_size: 28
            GridLayout:
                cols: 1
                Label:
                    bold: True
                    text: "Step 2:"
                    font_size: 28
                Label:
                    text: "Send payment"
                    font_size: 28
            GridLayout:
                cols: 1
                Label:
                    bold: True
                    text: "Step 3:"
                    font_size: 28
                Label:
                    text: "Click confirm below"
                    font_size: 28
        GridLayout:
            rows: 1
            size_hint: (1, None)
            height: self.minimum_height
            SmallConfirmButton:
                on_press: root.onConfirm()
            Widget: # Horizontal Spacer
                size_hint: (1, None)
                height: 50
            SmallCancelButton:
                on_press: root.onCancel()
                