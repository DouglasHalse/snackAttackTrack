#:kivy 2.1.0     

<TopUpPaymentScreenContent>:
    rows: 1
    padding: 30
    spacing: 30
    Image:
        source: 'Images/swish-QR-small.png'
        size: self.texture_size
    GridLayout:
        cols: 1
        spacing: 10
        GridLayout:
            cols: 1
            spacing: 10
            Label:
                bold: True
                text: "Step 1:"
                font_size: 28
            Label:
                text: "Scan QR code with swish"
                font_size: 28
            Label:
                bold: True
                text: "Step 2:"
                font_size: 28
            Label:
                id: amountLabel
                text: "Select ?? SEK as amount"
                font_size: 28
            Label:
                bold: True
                text: "Step 3:"
                font_size: 28
            Label:
                text: "Send payment"
                font_size: 28
            Label:
                bold: True
                text: "Step 4:"
                font_size: 28
            Label:
                text: "Click confirm below"
                font_size: 28
        GridLayout:
            rows: 1
            size_hint: (1, None)
            height: self.minimum_height
            SmallConfirmButton:
                on_press: root.onConfirm()
            Widget: # Horizontal Spacer
                size_hint: (1, None)
                height: 50
            SmallCancelButton:
                on_press: root.onCancel()
                