#:kivy 2.1.0     

<SystemSettingsOption>:
    image_path: 'Images/settings-sliders.png'
    text: 'System settings'

<StoreStatsOption>:
    image_path: 'Images/chart-histogram.png'
    text: 'Store statistics'

<EditSnacksOption>:
    image_path: 'Images/candy-bar.png'
    text: 'Edit snacks'

<EditUsersOption>:
    image_path: 'Images/user.png'
    text: 'Edit users'

<SalesHistoryOption>:
    image_path: 'Images/time-past.png'
    text: 'Sales history'

<AdminScreen>:
    rows: 2
    cols: 1
    NavigationHeader:
        id: header
        use_settings_button: False
        page_name: "Admin Screen"
    GridLayout:
        canvas:
            Color:
                rgba: app.colors["background"]
            Rectangle:
                pos: self.pos
                size: self.size
        rows: 1
        cols: 1
        padding: 30
        spacing: 30
        GridLayout:
            rows: 2
            cols: 3
            spacing: 30
            SystemSettingsOption:
                id: systemSettingsOption
                on_release: root.onSystemSettingsButtonPressed
            EditSnacksOption:
                id: editSnacksOption
                on_release: root.onEditSnacksButtonPressed
            StoreStatsOption:
                id: storeStatsOption
                on_release: root.onStoreStatsButtonPressed
            EditUsersOption:
                id: editUsersOption
                on_release: root.onEditUsersButtonPressed
            SalesHistoryOption:
                id: salesHistoryOption
                on_release: root.onSalesHistoryButtonPressed
            Widget:
                # Empty space for layout symmetry
        AnchorLayout:
            anchor_x: 'right'
            anchor_y: 'bottom'
            Button:
                id: aboutButton
                text: 'About'
                size_hint: None, None
                width: '120dp'
                height: '50dp'
                background_color: app.colors["button"]
                color: 'black'
                bold: True