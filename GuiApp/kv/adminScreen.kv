#:kivy 2.1.0     

<AdminScreenContent>:
    rows: 1
    padding: 30
    spacing: 30
    BoxLayoutButton:
        on_press: root.onEditSystemSettingsButtonPressed()
        canvas:
            Color:
                rgba: 0.2, 0.2, 0.2, 1
            RoundedRectangle:
                pos: self.pos
                size: self.size
        GridLayout:
            cols: 1
            padding: [0, 90]
            GridLayout:
                rows: 1
                size_hint: (1, None)
                padding: [70, 0]
                Image:
                    size_hint: (None, None)
                    height: 98
                    width: 98
                    source: 'Images/settings-sliders.png'
                Widget: # Horizontal Spacer
                    size_hint: (1, None)
                    height: 98
                Image:
                    size_hint: (None, None)
                    height: 98
                    width: 98
                    source: 'Images/wrench-alt.png'
            Widget: # Vertical Spacer
                size_hint: (1, 1)
            Label:
                text: 'System settings'
                bold: True
                font_size: "30sp"
                size_hint_y: None
                height: 30
    GridLayout:
        cols: 1
        spacing: 30
        BoxLayoutButton:
            on_press: root.onEditSnacksButtonPressed()
            canvas:
                Color:
                    rgba: 0.2, 0.2, 0.2, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
            GridLayout:
                cols: 1
                padding: [0, 20]
                GridLayout:
                    rows: 1
                    size_hint: (1, None)
                    height: 64
                    padding: [110, 0]
                    Image:
                        size_hint: (None, None)
                        height: 64
                        width: 64
                        source: 'Images/candy-bar.png'
                    Widget: # Horizontal Spacer
                        size_hint: (1, None)
                        height: 64
                    Image:
                        size_hint: (None, None)
                        height: 64
                        width: 64
                        source: 'Images/wrench-alt.png'
                Widget: # Vertical Spacer
                    size_hint: (1, 1)
                Label:
                    text: 'Edit snacks'
                    bold: True
                    font_size: "30sp"
                    size_hint_y: None
                    height: 30
        BoxLayoutButton:
            on_press: root.onEditUsersButtonPressed()
            canvas:
                Color:
                    rgba: 0.2, 0.2, 0.2, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
            GridLayout:
                cols: 1
                padding: [0, 20]
                GridLayout:
                    rows: 1
                    size_hint: (1, None)
                    height: 64
                    padding: [110, 0]
                    Image:
                        size_hint: (None, None)
                        height: 64
                        width: 64
                        source: 'Images/user.png'
                    Widget: # Horizontal Spacer
                        size_hint: (1, None)
                        height: 64
                    Image:
                        size_hint: (None, None)
                        height: 64
                        width: 64
                        source: 'Images/wrench-alt.png'
                Widget: # Vertical Spacer
                    size_hint: (1, 1)
                Label:
                    text: 'Edit users'
                    bold: True
                    font_size: "30sp"
                    size_hint_y: None
                    height: 30
