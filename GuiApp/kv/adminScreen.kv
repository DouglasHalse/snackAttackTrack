#:kivy 2.1.0     

<AdminScreenContent>:
    rows: 1
    padding: 30
    spacing: 30
    BoxLayoutButton:
        on_press: root.onEditSnacksButtonPressed()
        canvas:
            Color:
                rgba: 0.2, 0.2, 0.2, 1
            RoundedRectangle:
                pos: self.pos
                size: self.size
        Label:
            text: 'Edit snacks'
            size_hint: (1, 1)
    BoxLayoutButton:
        on_press: root.onEditUsersButtonPressed()
        canvas:
            Color:
                rgba: 0.2, 0.2, 0.2, 1
            RoundedRectangle:
                pos: self.pos
                size: self.size
        Label:
            text: 'Edit users'
            size_hint: (1, 1)

