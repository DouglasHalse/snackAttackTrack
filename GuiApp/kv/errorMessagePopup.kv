#:kivy 2.1.0     

<ErrorMessagePopup>:
    id: errorMessagePopup
    title: 'Error'
    size_hint: (0.5, 0.5)
    GridLayout:
        cols: 1
        padding: '10dp'
        spacing: '10dp'
        Label:
            id: errorMessagePopupLabel
            font_size: 18
            text_size: self.size
            halign: 'center'
            valign: 'middle'
            bold: True            
            text: 'UNDEFINED'
        GridLayout:
            rows: 1
            size_hint: (1, None)
            height: self.minimum_height
            orientation: 'rl-tb'
            SmallCloseButton:
                on_press: root.dismiss()
