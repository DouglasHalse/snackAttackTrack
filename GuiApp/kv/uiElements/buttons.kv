#:kivy 2.1.0     

<GreenButton>:
    text: "UNDEFINED"
    text_size: 16
    size_hint: (None, None)
    canvas:
        Color:
            rgba: app.colors["green_button"]
        SmoothRoundedRectangle:
            pos: self.pos
            size: self.size
    Label:
        bold: True
        text: root.text
        font_size: root.text_size
        size_hint: (1, 1)

<SmallGreenButton@GreenButton>:
    width: 150
    height: 50
    text_size: 22
    text: "UNDEFINED"

<MediumGreenButton@GreenButton>:
    width: 200
    height: 75
    text_size: 28
    text: "UNDEFINED"

<LargeGreenButton@GreenButton>:
    width: 300
    height: 100
    text_size: 42
    text: "UNDEFINED"


