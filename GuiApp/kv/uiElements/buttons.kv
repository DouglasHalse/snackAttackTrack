#:kivy 2.1.0     

<GreenButton>:
    text: "UNDEFINED"
    text_size: 16
    size_hint: (None, None)
    canvas:
        Color:
            rgba: app.colors["green_button"]
        SmoothRoundedRectangle:
            pos: self.pos
            size: self.size
    Label:
        bold: True
        text: root.text
        font_size: root.text_size
        size_hint: (1, 1)


