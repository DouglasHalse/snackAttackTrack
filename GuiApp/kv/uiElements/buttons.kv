#:kivy 2.1.0     

<ConfirmButton>
    canvas:
        Color:
            rgba: 0.0, 0.4, 0.0, 1
        RoundedRectangle:
            pos: self.pos
            size: self.size
    Label:
        bold: True
        text: 'Confirm'
        size_hint: (1, 1)

<SmallConfirmButton@ConfirmButton>:
    size_hint: (None, None)
    width: 150
    height: 50

<MediumConfirmButton@ConfirmButton>:
    size_hint: (None, None)
    width: 200
    height: 75

<LargeConfirmButton@ConfirmButton>:
    size_hint: (None, None)
    width: 300
    height: 100


