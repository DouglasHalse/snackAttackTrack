#:kivy 2.1.0     

<SplashScreenWidget>:
    Button:
        on_press: root.onPressed()
        StackLayout:
            pos: self.parent.pos
            size: self.parent.size
            orientation: 'lr-tb'
            Image:
                source: 'Images/background.gif'
                fit_mode: 'fill'
                color: 'white'
    GridLayout:
        cols: 1
        Widget: # Vertical Spacer
            size_hint: (1, 1)
        Image:
            source: 'Images/logo_type.png'
            size_hint: (None, 1)
            width: root.width
            allow_stretch: True
        Label:
            halign: 'center'
            size_hint: (1, None)
            height: 28
            font_size: self.width/28
            color: 'black'
            bold: True
            text: "Tap to login or create user..."
        Widget: # Vertical Spacer
            size_hint: (1, 1)