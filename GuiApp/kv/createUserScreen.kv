<CreateUserScreen>:
    GridLayout:
        cols: 1
        canvas:
            Color:
                rgba: app.colors["background"]
            Rectangle:
                pos: self.pos
                size: self.size
        GridLayout:
            cols: 1
            padding: [100, 30, 100, 0]
            spacing: 20

            Label:
                text: "Create New User"
                bold: True
                font_size: 32
                size_hint_y: None
                color: 'black'
                height: 32

            RoundedTwoColorGridLayout:
                cols: 1
                spacing: 10
                padding: [20, 20]
                size_hint_y: None
                height: self.minimum_height
                LargeTextInputWithHeader:
                    id: firstNameInput
                    header_text: "First name"
                    hint_text: "Enter first name"
                LargeTextInputWithHeader:
                    id: lastNameInput
                    header_text: "Last name"
                    hint_text: "Enter last name"
                LargeTextInputWithHeader:
                    id: cardIdInput
                    header_text: "Login card"
                    hint_text: "Blipp card to register (optional)"
                    disable_input: True

            GridLayout:
                rows: 1
                size_hint_y: None
                height: self.minimum_height
                spacing: 20

                LargeRegisterButton:
                    on_press: root.registerUser()
                Widget: # Horizontal Spacer
                    size_hint: (1, None)
                    height: 100
                LargeCancelButton:
                    on_press: root.cancel()
