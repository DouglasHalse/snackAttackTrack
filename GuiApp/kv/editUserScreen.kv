#:kivy 2.1.0

<EditUserScreenContent>:
    cols: 1
    padding: 20
    spacing: 10
    GridLayout:
        cols: 1
        padding: [150, 0]
        Label:
            text_size: self.size
            size_hint_y: None
            height: 20
            text: "First name"
            bold: True
        TextInput:
            id: firstNameInput
            write_tab: False
            hint_text: "FIRST NAME"
            size_hint_y: None
            height: 40
            padding: [10, 10]
        Label:
            text_size: self.size
            size_hint_y: None
            height: 30
            text: "Last name"
            bold: True
        TextInput:
            id: lastNameInput
            write_tab: False
            hint_text: "LAST NAME"
            size_hint_y: None
            height: 40
            padding: [10, 10]
        Label:
            text_size: self.size
            size_hint_y: None
            height: 30
            text: "Credits"
            bold: True
        TextInput:
            id: creditsInput
            write_tab: False
            hint_text: "CREDITS"
            size_hint_y: None
            height: 40
            padding: [10, 10]
        Label:
            text_size: self.size
            size_hint_y: None
            height: 30
            text: "Card id (Scan card to update)"
            bold: True
        TextInput:
            id: cardIdInput
            write_tab: False
            hint_text: "Scan card to update id"
            size_hint_y: None
            disabled: True
            height: 40
            padding: [10, 10]
    GridLayout:
        rows: 1
        size_hint: (1, None)
        height: self.minimum_height
        padding: [20, 0]
        MediumConfirmButton:
            on_press: root.onConfirm()
        Widget: # Horizontal Spacer
            size_hint: (1, None)
            height: 75
        MediumCancelButton:
            on_press: root.onCancel()
        Widget: # Horizontal Spacer
            size_hint: (1, None)
            height: 75
        MediumRemoveButton:
            on_press: root.onRemove()


<RemoveUserConfirmationPopup>:
    title: "Remove user"
    size_hint: (None,None)
    size: (700,400)
    GridLayout:
        cols: 1
        padding: 30
        spacing: 30
        Label:
            id: areYouSureLabel
            text_size: self.size
            font_size: 32
            halign: 'center'
            valign: 'top'
            text: "Are you sure you want to \nremove FIRSTNAME?"
            bold: True
        GridLayout:
            rows: 1
            size_hint: (1, None)
            height: self.minimum_height
            padding: [60, 0]
            MediumCancelButton:
                on_press: root.onCancel()
            Widget: # Horizontal Spacer
                size_hint: (1, None)
                height: 75
            MediumRemoveButton:
                on_press: root.onRemove()
            
            
