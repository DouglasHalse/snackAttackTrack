#:kivy 2.1.0


<BuyScreenContent>:
    cols: 1
    size_hint: (1, 1)
    padding: '10dp'
    canvas:
        Color:
            rgba: 0.3, 0.3, 0.3, 1
        Rectangle:
            pos: self.pos
            size: self.size
    GridLayout:
        rows: 1
        spacing: 30
        size_hint: (1, 0.8)
        GridLayout:
            id: inventoryItemSelection
            cols: 1
            spacing: 5
            Label:
                text_size: self.size
                size_hint_y: None
                height: 20
                text: "Inventory"
                bold: True
        GridLayout:
            id: shoppingCartItemSelection
            cols: 1
            spacing: 5
            Label:
                text_size: self.size
                size_hint_y: None
                height: 20
                text: "Shopping cart"
                bold: True
    GridLayout:
        rows: 1
        size_hint: (1, 0.2)
        padding: [0, 10, 0, 0]
        spacing: 60
        Label:
            text: 'Total price: 0.00 credits'
            id: totalPriceLabel
            font_size: 24
            text_size: self.size
            size_hint_y: None
            halign: 'left'
            valign: 'middle'
            bold: True
            size_hint: (0.5, 1)
        BoxLayoutButton:
            on_press: root.onBuy()
            size_hint: (0.25, 1)
            canvas:
                Color:
                    rgba: 0.0, 0.9, 0.0, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
            
            Label:
                bold: True
                text: 'Buy'
                size_hint: (1, 1)
        BoxLayoutButton:
            on_press: root.onCancel()
            size_hint: (0.25, 1)
            canvas:
                Color:
                    rgba: 0.9, 0.0, 0.0, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
            
            Label:
                bold: True
                text: 'Cancel'
                size_hint: (1, 1)
    

