#:kivy 2.1.0

<SnackList>:
    rows: 1
    spacing: 30
    GridLayout:
        cols: 1
        spacing: 5
        Label:
            id: snackListHeading
            text_size: self.size
            size_hint_y: None
            height: 20
            text: "TEMP"
            bold: True
        GridLayout:
            cols: 1
            size_hint: 1, 1
            canvas.after:
                Color:
                    rgba: .5, .5, .5, 1
                Line:
                    width: 2
                    rectangle: self.x, self.y, self.width, self.height
            GridLayout:
                rows: 1
                size_hint: 1, None
                height: '50dp'
                canvas.after:
                    Color:
                        rgba: .5, .5, .5, 1
                    Line:
                        width: 2
                        rectangle: self.x, self.y, self.width, self.height
                Label:
                    size_hint: 1, None
                    text: 'Snack name'
                    bold: True
                    height: '50dp'
                Label:
                    size_hint: 1, None
                    text: 'Quantity'
                    bold: True
                    height: '50dp'
                Label:
                    size_hint: 1, None
                    text: 'Price'
                    bold: True
                    height: '50dp'
            ScrollView:
                size_hint: 1, 1
                do_scroll_x: False
                id: snacksScrollView


<BuyScreenContent>:
    cols: 1
    size_hint: (1, 1)
    padding: '10dp'
    canvas:
        Color:
            rgba: 0.3, 0.3, 0.3, 1
        Rectangle:
            pos: self.pos
            size: self.size
    GridLayout:
        id: shoppingItemSelection
        rows: 1
        spacing: 30
        size_hint: (1, 0.8)
    GridLayout:
        rows: 1
        size_hint: (1, 0.2)
        padding: [0, 10, 0, 0]
        spacing: 60
        Label:
            text: 'Total price: 0.00 credits'
            id: totalPriceLabel
            font_size: 24
            text_size: self.size
            size_hint_y: None
            halign: 'left'
            valign: 'middle'
            bold: True
            size_hint: (0.5, 1)
        BoxLayoutButton:
            on_press: root.onBuy()
            size_hint: (0.25, 1)
            canvas:
                Color:
                    rgba: 0.0, 0.9, 0.0, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
            
            Label:
                bold: True
                text: 'Buy'
                size_hint: (1, 1)
        BoxLayoutButton:
            on_press: root.onCancel()
            size_hint: (0.25, 1)
            canvas:
                Color:
                    rgba: 0.9, 0.0, 0.0, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
            
            Label:
                bold: True
                text: 'Cancel'
                size_hint: (1, 1)
    
<SnackShoppingEntry>:
    rows: 1
    size_hint_y: None
    height: '50dp'
    on_press: root.onPress()
    canvas.after:
        Color:
            rgba: .5, .5, .5, 1
        Line:
            width: 2
            rectangle: self.x, self.y, self.width, self.height
    Label:
        id: snackNameLabel
        text: 'Snack'
        size_hint: 1, None
        height: '50dp'
    Label:
        id: snackQuantityLabel
        text: 'Snack'
        size_hint: 1, None
        height: '50dp'
    Label:
        id: snackPriceLabel
        text: 'Snack'
        size_hint: 1, None
        height: '50dp'
