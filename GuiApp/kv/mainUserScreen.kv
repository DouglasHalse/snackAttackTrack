#:kivy 2.1.0     

<MainUserScreenContent>:
    rows: 1
    padding: 30
    spacing: 30
    BoxLayoutButton:
        on_press: root.onBuyButtonPressed()
        canvas:
            Color:
                rgba: 0.2, 0.2, 0.2, 1
            RoundedRectangle:
                pos: self.pos
                size: self.size
        Label:
            text: 'Buy'
            size_hint: (1, 1)
    BoxLayoutButton:
        on_press: root.onTopUpButtonPressed()
        canvas:
            Color:
                rgba: 0.2, 0.2, 0.2, 1
            RoundedRectangle:
                pos: self.pos
                size: self.size
        
        Label:
            text: 'Top up'
            size_hint: (1, 1)
    BoxLayoutButton:
        on_press: root.onHistoryButtonPressed()
        canvas:
            Color:
                rgba: 0.2, 0.2, 0.2, 1
            RoundedRectangle:
                pos: self.pos
                size: self.size
        
        Label:
            text: 'History'
            size_hint: (1, 1)