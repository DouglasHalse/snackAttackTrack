#:kivy 2.1.0     

<MainUserScreenOption@ClickableRoundedTwoColorGridLayout>:
    image_source: 'Images/user.png'
    option_name: 'OPTION'
    cols: 1
    Widget: # Horizontal Spacer
        size_hint_y: 0.2
    Image:
        size_hint_y: 0.3
        fit_mode: 'contain'
        mipmap: True
        source: root.image_source if hasattr(root, 'image_source') else 'Images/user.png'
    Widget: # Horizontal Spacer
        size_hint_y: 0.2
    Label:
        text: root.option_name if hasattr(root, 'option_name') else 'OPTION'
        bold: True
        font_size: self.width/8
        size_hint_y: 0.2
    Widget: # Horizontal Spacer
        size_hint_y: 0.1

<GambleOption>:
    image_source: 'Images/roulette.png'
    option_name: 'Gamble'

<BuyOption>:
    image_source: 'Images/cart-shopping-fast.png'
    option_name: 'Buy'

<TopUpOption>:
    image_source: 'Images/money-income.png'
    option_name: 'Top-up'

<HistoryOption>:
    image_source: 'Images/time-past.png'
    option_name: 'History'



<MainUserScreen@GridLayoutScreen>:
    rows: 2
    cols: 1
    NavigationHeader:
        id: header
        use_settings_button: True
    GridLayout:
        id: optionsGrid
        rows: 1
        canvas:
            Color:
                rgba: app.colors["background"]
            Rectangle:
                pos: self.pos
                size: self.size
        padding: 30
        spacing: 30
        GambleOption:
            id: gambleOption
        BuyOption:
            id: buyOption
        GridLayout:
            cols: 1
            spacing: 30
            TopUpOption:
                id: topUpOption
            HistoryOption:
                id: historyOption
