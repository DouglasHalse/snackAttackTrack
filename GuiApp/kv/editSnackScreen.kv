#:kivy 2.1.0

<EditSnackScreenContent>:
    cols: 1
    padding: 30
    spacing: 30
    GridLayout:
        cols: 1
        size_hint: (1, 0.75)
        padding: [150, 0]
        Label:
            text_size: self.size
            size_hint_y: None
            height: 30
            text: "Snack name"
            bold: True
        TextInput:
            id: snackNameInput
            write_tab: False
            hint_text: "SNACK NAME"
            size_hint_y: None
            height: 40
            padding: [10, 10]
        Label:
            text_size: self.size
            size_hint_y: None
            height: 30
            text: "Quantity"
            bold: True
        TextInput:
            id: snackQuantityInput
            write_tab: False
            hint_text: "QUANTITY"
            size_hint_y: None
            height: 40
            padding: [10, 10]
        Label:
            text_size: self.size
            size_hint_y: None
            height: 30
            text: "Price per item"
            bold: True
        TextInput:
            id: snackPriceInput
            write_tab: False
            hint_text: "PRICE"
            size_hint_y: None
            height: 40
            padding: [10, 10]
    GridLayout:
        rows: 1
        size_hint: (1, None)
        height: self.minimum_height
        padding: [20, 0]
        MediumConfirmButton:
            on_press: root.onConfirm()
        Widget: # Horizontal Spacer
            size_hint: (1, None)
            height: 75
        MediumCancelButton:
            on_press: root.onCancel()
        Widget: # Horizontal Spacer
            size_hint: (1, None)
            height: 75
        MediumRemoveButton:
            on_press: root.onRemove()


<RemoveSnackConfirmationPopup>:
    title: "Remove snack"
    size_hint: (None,None)
    size: (700,400)
    GridLayout:
        cols: 1
        padding: 30
        spacing: 30
        Label:
            id: areYouSureLabel
            text_size: self.size
            font_size: 32
            halign: 'center'
            valign: 'top'
            text: "Are you sure you want to \nremove SNACKNAME?"
            bold: True
        GridLayout:
            rows: 1
            size_hint: (1, None)
            height: self.minimum_height
            padding: [60, 0]
            MediumCancelButton:
                on_press: root.onCancel()
            Widget: # Horizontal Spacer
                size_hint: (1, None)
                height: 75
            MediumRemoveButton:
                on_press: root.onRemove()
            
