#:kivy 2.1.0     

<AddSnackScreenContent>:
    rows: 1
    padding: 30
    spacing: 30
    GridLayout:
        size_hint: (0.5, 1)
        cols:1
        spacing: 20
        RoundedTwoColorGridLayout:
            cols: 1
            spacing: 10
            padding: 20
            size_hint: (1, None)
            height: self.minimum_height
            LargeTextInputWithHeader:
                id: snackNameInput
                header_text: "Snack Name"
                hint_text: "Enter snack name"
            LargeTextInputWithHeader:
                id: snackQuantityInput
                header_text: "Quantity"
                hint_text: "Enter quantity"
                input_filter: "int"
            LargeTextInputWithHeader:
                id: snackPriceInput
                header_text: "Price"
                hint_text: "Enter price"
                input_filter: "float"
        GridLayout:
            rows: 1
            size_hint: (1, None)
            height: self.minimum_height
            SmallConfirmButton:
                on_press: root.onConfirm()
            Widget: # Horizontal Spacer
                size_hint: (1, None)
                height: 50
            SmallCancelButton:
                on_press: root.onCancel()

    GridLayout:
        cols: 1
        size_hint: (0.5, 1)
        padding: [5, 60, 5, 0]
        spacing: 10
        Label:
            font_size: "30sp"
            size_hint_y: None
            height: 30
            text: "This change will add"
            bold: True
            color: "black"
        Label:
            id: numberOfItemsLabel
            font_size: "30sp"
            size_hint_y: None
            height: 30
            text: "? of ?"
            color: "black"
        Label:
            font_size: "30sp"
            size_hint_y: None
            height: 30
            text: "which will cost users"
            bold: True
            color: "black"
        Label:
            id: pricePerItemLabel
            font_size: "30sp"
            size_hint_y: None
            height: 30
            text: "0.00 credits per item"
            color: "black"
        Label:
            id: purchaseFeeLabel
            font_size: "30sp"
            size_hint_y: None
            height: 30
            text: "including fee of 5.00%"
            bold: True
            color: "black"
