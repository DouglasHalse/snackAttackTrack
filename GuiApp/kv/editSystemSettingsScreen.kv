<SettingsSection>:
    cols: 1
    size_hint: 1, None
    height: self.minimum_height
    
    Label:
        id: sectionNameLabel
        text_size: self.size
        size_hint_y: None
        height: 20
        text: "SECTION NAME"
        bold: True
        font_size: "20sp"

    GridLayout:
        id: sectionContent
        cols: 1
        padding: "10dp"
        spacing: 10
        size_hint_y: None
        height: self.minimum_height


<EditSystemSettingsScreenContent>:
    rows: 1
    size_hint: (1, 1)
    padding: '20dp'    
    GridLayout:
        rows: 1
        padding: 10
        canvas.before:
            Color:
                rgba: 0, 0, 0, 0.10
            BoxShadow:
                pos: self.pos
                size: self.size
                offset: 10, -10
                blur_radius: 15
                spread_radius: -5, -5
                border_radius: 10, 10, 10, 10
        canvas:
            Color:
                rgba: (1, 1, 1, 1)
            SmoothRoundedRectangle:
                pos: self.pos
                size: self.size
            Color:
                rgba: app.colors["button"]
            SmoothRoundedRectangle:
                pos: (self.pos[0] + 5, self.pos[1] + 5)
                size: (self.width - 10, self.height - 10)
        ScrollView:
            size_hint: 1, 1
            do_scroll_x: False
            GridLayout:
                id: settingsLayout
                cols: 1
                padding: 10
                spacing: 10
                size_hint_y: None
                height: self.minimum_height
                