#:kivy 2.1.0     



<BoolSettingRow>:
    rows: 1
    size_hint: (1, None)
    height: 64
    padding: [50, 0]
    canvas:
        Color:
            rgba: app.colors["secondary_background"]
        SmoothRoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [(2, 2),(2, 2),(2, 2),(2, 2)]
    canvas.before:
        Color:
            rgba: 0, 0, 0, 0.10
        BoxShadow:
            pos: self.pos
            size: self.size
            offset: 10, -10
            blur_radius: 15
            spread_radius: -5, -5
            border_radius: 2, 2, 2, 2
    Label:
        id: settingName
        text: "Settings item"
        text_size: self.size
        halign: 'left'
        valign: 'middle'
        bold: True
        font_size: "25sp"
    GridLayout:
        rows: 1
        size_hint: (None, None)
        height: 64
        width: 128
        Widget: # Horizontal Spacer
            size_hint: (1, None)
            height: 64
        BoxLayoutButton:
            on_press: root.onSettingChanged()
            size_hint: (None, None)
            height: 64
            width: 64
            Image:
                id: toggleButtonImage
                source: 'Images/toggle-on.png'
        Widget: # Horizontal Spacer
            size_hint: (1, None)
            height: 64

