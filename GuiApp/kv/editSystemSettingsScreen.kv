<SettingsSection>:
    cols: 1
    size_hint: 1, None
    height: self.minimum_height

    Label:
        id: sectionNameLabel
        text_size: self.size
        size_hint_y: None
        height: self.parent.width / 24
        font_size: self.parent.width / 26
        text: "SECTION NAME"
        bold: True
        
    GridLayout:
        id: sectionContent
        cols: 1
        padding: 10
        spacing: self.parent.width / 80
        size_hint_y: None
        height: self.minimum_height


<EditSystemSettingsScreen>:
    rows: 2
    cols: 1
    NavigationHeader:
        id: header
        use_back_button: True
        page_name: "System Settings"
    GridLayout:
        cols: 1
        padding: 20
        canvas:
            Color:
                rgba: app.colors["background"]
            Rectangle:
                pos: self.pos
                size: self.size
        RoundedTwoColorGridLayout:
            rows: 1
            padding: 10
            ScrollView:
                id: settingsScrollView
                do_scroll_x: False
                GridLayout:
                    id: settingsLayout
                    cols: 1
                    padding: 10
                    spacing: 10
                    size_hint_y: None
                    height: self.minimum_height
                    