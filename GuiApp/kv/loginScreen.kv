#:kivy 2.1.0     

<LoginScreenUserWidget>:
    size_hint: None, None
    height: '120dp'
    width: '120dp'
    on_press: root.Clicked()
    canvas:
        Color:
            rgba: .8, .8, .8, 1
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        id: userNameLabel
        text: 'User'
        text_size: self.size
        size: self.texture_size
        halign: 'center'
        valign: 'center'
        font_size: 18
        color : [0,0,0,1]
        bold: True
    
<LoginScreen>:
    GridLayout:
        cols: 1
        padding: [0, 40, 0, 0]
        Label:
            halign: 'center'
            size_hint: (1, None)
            height: 33
            font_size: 32
            color: 'white'
            bold: True
            text: "Select or create user"
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            size_hint: 1, 0.7
            ScrollView:
                id: scrollView
                size_hint: 1, None
                size_hint_min_x: 1
                height: '130dp'
                do_scroll_y: False
                GridLayout:
                    id: LoginScreenUserGridLayout
                    rows: 1
                    spacing: 30
                    padding: [30, 0]
                    size_hint_x: None
                    width: self.minimum_width
                        
        AnchorLayout:
            size_hint: 1, 0.3
            anchor_x: 'center'
            anchor_y: 'center'
            BoxLayoutButton:
                on_press: root.createNewUserButtonClicked()
                size_hint: None, None
                height: '50dp'
                width: '240dp'
                canvas:
                    Color:
                        rgba: 0.7, 0.7, 0.7, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size    
                Label:
                    id: manageDeviceCancelLabel
                    text: 'Create new user'
                    bold: True
                    font_size: "30sp"
                    size_hint: (1, 1)