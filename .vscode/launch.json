{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Run Snack Attack Track GUI",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/GuiApp/main.py",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: Run current file",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: Run image diff",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/.github/workflows/scripts/diffImages.py",
            "args": [
                "${workspaceFolder}/preMerge",
                "${workspaceFolder}/postMerge",
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "pytest: Current File",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${file}" "-rP"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}/GuiApp"
            },
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "pytest: All tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${workspaceFolder}/GuiApp/tests",
                "-rP",
                "--maxfail=5"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}/GuiApp"
            },
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}